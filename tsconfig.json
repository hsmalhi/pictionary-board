{
  "compilerOptions": {
    "isolatedModules": true,
    "skipLibCheck": true,
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noImplicitAny": true,
    "allowJs": true,
    "strictNullChecks": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react",
    "outDir": "dist"
  },
  "include": [
    "./src/*",
    "src/**/*"
  ],
  "exclude": [
    "./node_modules/*"
  ]
}